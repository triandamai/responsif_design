<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ks1">

    <ImageView
        android:layout_alignParentTop="true"
        android:background="@drawable/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Citra Catering's-"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/Magenta"
        android:layout_marginTop="109dp"
        android:id="@+id/textView"
        android:layout_below="@+id/nama_app"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nama_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:background="@color/Blue"
        android:text="Lihat Menu"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:text="Keluar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
